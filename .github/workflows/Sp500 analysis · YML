name: S&P 500 Stock Analysis - Daily Report

on:
  schedule:
    # Run at 4:30 PM EST (9:30 PM UTC) on weekdays
    - cron: '30 21 * * 1-5'
  
  # Allow manual trigger
  workflow_dispatch:

jobs:
  analyze-stocks:
    runs-on: ubuntu-latest
    
    steps:
    - name: Checkout repository
      uses: actions/checkout@v3
    
    - name: Set up Python
      uses: actions/setup-python@v4
      with:
        python-version: '3.10'
    
    - name: Install dependencies
      run: |
        python -m pip install --upgrade pip
        pip install yfinance pandas numpy openpyxl pytz
    
    - name: Run S&P 500 Analyzer
      env:
        GMAIL_USER: ${{ secrets.GMAIL_USER }}
        GMAIL_APP_PASSWORD: ${{ secrets.GMAIL_APP_PASSWORD }}
        RECIPIENT_EMAIL: ${{ secrets.RECIPIENT_EMAIL }}
      run: |
        python sp500_analyzer.py
    
    - name: Upload analysis results (optional)
      if: always()
      uses: actions/upload-artifact@v3
      with:
        name: analysis-logs
        path: |
          *.log
          *.txt
        retention-days: 7
